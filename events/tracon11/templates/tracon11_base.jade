doctype 5
- load static from staticfiles
html
  head
    title
      block full_title
        {% if page.title %}{{ page.title }} – {{ site_settings.title }}{% else %}{{ site_settings.title }}{% endif %}
    link(rel='stylesheet', type='text/css', href='{% static "common/css/bootstrap.min.css" %}')
    link(rel='stylesheet', type='text/css', href='{% static "tracon11/css/tracon11.css" %}')
    script(src='{% static "common/js/jquery.min.js" %}', defer)
    script(src='{% static "common/js/bootstrap.min.js" %}', defer)
  body
    .navbar.navbar-inverse.navbar-fixed-top.tracon-navbar
      .container
        .navbar-header
          a.navbar-brand(href='/') {{ site_settings.title }}

        .collapse.navbar-collapse
          ul.nav.navbar-nav
            for entry in menu
              if entry.children
                li.dropdown(class="#{entry.active_css}")
                  a(href, class="dropdown-toggle", data-toggle="dropdown")= entry.text
                    b.caret
                  ul.dropdown-menu
                    li(class="#{child.active_css}"): a(href='#{entry.href}')= entry.text
                    for child in entry.children
                      li(class="#{child.active_css}"): a(href='#{child.href}')= child.text
              else
                li(class="#{entry.active_css}"): a(href='#{entry.href}')= entry.text
    .tracon-content-wrap
      .container
        include content_admin_toolbar.jade
        h1 {{ page.title }}
        {{ page.body|safe }}

      .tracon-footer-push

    footer
      .container
        p.tracon-credit
          small.text-muted Tracon 11 -tapahtuman järjestää <a href='http://ry.tracon.fi'>Tracon ry</a>. {{ tracontent_footer|safe }}
