doctype 5
- load static from staticfiles
html
  head
    title
      block full_title
        {% if page.title %}{{ page.title }} – {{ site_settings.title }}{% else %}{{ site_settings.title }}{% endif %}
    link(rel='stylesheet', type='text/css', href='{% static "example/css/bootstrap.min.css" %}')
    link(rel='stylesheet', type='text/css', href='{% static "example/css/example.css" %}')
  body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href='/') {{ site_settings.title }}
    .example-content-wrap
      .container
        if request.user.is_staff
          .btn-group.pull-right
            a.btn.btn-primary(href='{{ page.edit_link }}', target='_blank') Muokkaa sivua...
        h1 {{ page.title }}
        {{ page.body|safe }}

      .example-footer-push

    footer
      .container
        p.example-credit
          small.text-muted
            | <a href='https://github.com/tracon/tracontent' target='_blank'>TraContent CMS Enterprise Edition</a>
