extends aicon2018_base.jade
block content
  include content_toolbar_admin_blog_index.pug
  article
    h1 {{ page.title }}
    {{ page.body|safe }}
  .aicon-blog-index
    for blog_post in blog_posts
      article
        h2: a(href='#{blog_post.get_absolute_url()}')= blog_post.title
        p.aicon-blog-meta {{ blog_post.formatted_author }} {{ blog_post.date|date:"j.n.Y" }}
        p= blog_post.excerpt
