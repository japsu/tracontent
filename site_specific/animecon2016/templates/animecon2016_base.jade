  body
    header
    nav
      #extra
      #wrapper
        include animecon2016_menu.jade
        icon
          a(target='_blank', href='https://www.facebook.com/AnimeconFI')
            img(src='img/FB_button.png')
          a(target='_blank', href='https://twitter.com/AnimeconFI')
            img(src='img/Twitter_button.png')
          a(target='_blank', href='https://www.youtube.com/channel/UCrFNhEYZO-KPo4Mn2wucnUQ')
            img(src='img/Youtube_button.png')
    #shadow
      .navshadow
      .navShadow
    block content_full_width
      content
        main
          block content
            p Sisältö tulee tähän.
        side
          twitter
            a.twitter-timeline(width='250', height='350', data-dnt='true', href='https://twitter.com/AnimeconFI', data-widget-id='558954967277768704') Tweets by @AnimeconFI
            script.
              !function(d,s,id){
              var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';
              if(!d.getElementById(id)){
              js=d.createElement(s);
              js.id=id;js.src=p+"://platform.twitter.com/widgets.js";
              fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
          sponsors
            h1 Sponsorit
            img(src='/img/sponsorit/sponssi.jpg')
    footer
      #extraFoot
      p @Animecon
