- load static from staticfiles
html
  head
    title Animecon 2016
    meta(charset='utf-8')
    //- script(type='text/javascript', src='code/javascript/slide.js')
    link(rel='stylesheet', type='text/css', href='{% static "animecon2016/css/style.css" %}')
    link(rel='stylesheet', type='text/css', href='{% static "animecon2016/css/layout.css" %}')
    //- link(rel='shortcut icon', href='/favicon.ico?v=2', type='image/ico')
