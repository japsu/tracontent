<!DOCTYPE html>
%html{ :lang => "en" }
  = Haml::Engine.new(File.read("head.haml")).render
  %body
    = Haml::Engine.new(File.read("en_header.haml")).render

    %header.header--fullscreen.hidden-xs
      .text-vertical-center
        %img{ :src => "../images/hitpoint_shadow.png", :style => "opacity: 0.8", :style => "filter: alpha(opacity=80)" }

    %section#anchor

    %section#alert.info
      - File.readlines('en_alerts').each do |line|
        - if line.length <= 1
          - next
        .container-fluid
          %p{:style => "color:green"}<
            = line

    %section#info
      .container
        - File.open("en_location", "r") do |fh|
          - count = 0
          - begin
            - while (true)
              - header = fh.readline
              - lines = []
              - while(line = fh.gets) != nil
                - if line.length == 1
                  - break
                - lines << line
              %row
                %article
                  %h3<
                    = header
                  - lines.each do |line|
                    %p<
                      = line
          - rescue => ex
        #map-canvas

    %section#desc
      .container
        %row
          %article
            %p<
              %b<
                Hitpoint is Tracon's sister event that focuses heavily on different tabletop games, such as pen & paper RPGâ€™s, card games, figurine games, and other tabletop games. It is a meeting place for hobbyists loving all things game.
    
    %section#data
      .container
        - File.open("en_main", "r") do |fh|
          - count = 0
          - begin
            - while (true)
              - header = fh.readline
              - lines = []
              - while(line = fh.gets) != nil
                - if line.length == 1
                  - break
                - lines << line
              %row
                %article
                  %h3<
                    = header
                  %p<
                    - lines.each do |line|
                      = line
          - rescue => ex

    = Haml::Engine.new(File.read("footer.haml")).render
